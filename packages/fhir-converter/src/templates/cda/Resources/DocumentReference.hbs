{
    "fullUrl":"urn:uuid:{{ID}}",
    "resource":{
        "resourceType": "DocumentReference",
        "id":"{{ID}}",
        "type":
        	{{#with (elementAt (toArray docref.ClinicalDocument.code) 0)}}
        		{{>DataType/CodeableConcept.hbs code=this}},
           	{{/with}},
        "date":"{{formatAsDateTime (now)}}",
        "status":"current",
        {{! Missing status mapping }}
        "content":
        [
            {
                "attachment":
                {
                    "contentType":"text/plain",
                    {{! Missing contentType mapping }}
                    "data":"{{{gzip docref._originalData 'utf8' 'base64'}}}",
                    "hash":"{{{base64Encode (sha1Hash (gzip docref._originalData 'utf8' 'base64')) 'hex'}}}",
                },
            },
        ],

        {{! Missing docStatus }}
        {{! Missing type }}
        {{! Missing category }}
        {{! Missing subject reference }}
        {{! Missing author}}
        {{! Missing authenticator }}
        {{! Missing custodian }}
        {{! Missing description }}
        {{! Missing context }}
    },
    "request":{
        "method":"PUT",
        "url":"DocumentReference/{{ID}}",
    },
},